<html>

<head>
  <title>Bookmark Manager</title>
</head>

<h1>Bookmark Manager</h1>

<% if current_user %>
  <h2>Welcome <%= @current_user.email %></h2>
<% end %>

<ul id='favourites'>
  <% @favourites.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
    </li>
  <% end %>
</ul>

</html>
